<%- include("_header") %>

<h1>Blog (<%= model.length %>)</h1>

<div class="table-responsive-sm">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>
          <a href="/create" class="btn btn-sm btn-success">Create</a>
        </th>
      </tr>
    </thead>
    <tbody>
      <% for(const blog of model){ %>
      <tr>
        <td><%= blog.Title %></td>
        <td>
          <a href="/edit?id=<%= blog.ID %>" class="btn btn-sm btn-warning"
            >Edit</a
          >
          <a href="/delete?id=<%= blog.ID %>" class="btn btn-sm btn-danger"
            >Delete</a
          >
        </td>
      </tr>
      <% } %>
    </tbody>
  </table>
</div>

<%- include("_footer") %>

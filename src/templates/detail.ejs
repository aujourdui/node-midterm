<%- include("_header") %>
<h1 class="mb-4 mt-5">Blog Detail</h1>
<a href="/api/home" class="btn btn-sm btn-success fixed-top right-4"
  >Back to home</a
>
<div class="form-group row">
  <div class="col-sm-8">
    <h4>Title</h4>
    <h5 class="mb-4"><%= model.Title %></h5>
    <h4>Content</h4>
    <p><%= model.Content %></p>
    <p>Comment List</p>
    <ul>
      <% for(const comment of model.Comments){ %>
      <li class="list-unstyled"><%= comment.Comment %></li>
      <% } %>
    </ul>
    <p>Comment Form</p>
    <form action="/api/home/comment" method="post">
      <textarea
        rows="4"
        cols="50"
        name="Comment"
        class="form-control"
      ></textarea>
      <input type="hidden" name="id" value="<%= model.ID %>" />
      <input
        type="submit"
        value="Add comment"
        class="btn btn-default btn-secondary mt-2"
      />
    </form>
    <form action="/api/home/like" method="post">
      <div class="d-flex justify-content-end">
        <p class="mt-4">Like <%= model.Like++ %></p>
        <input
          type="hidden"
          name="Like"
          class="form-control"
          value="<%= model.Like %>"
        />
        <input type="hidden" name="id" value="<%= model.ID %>" />
        <input
          type="submit"
          value="Like"
          class="btn btn-default btn-info ml-2 mt-2 p-3"
        />
      </div>
    </form>
    <div class="mt-2">
      <a href="/edit/<%= model.ID %>" class="btn btn-sm btn-warning">Edit</a>
      <a href="/delete/<%= model.ID %>" class="btn btn-sm btn-danger">Delete</a>
    </div>
  </div>
</div>
<%- include("_footer") %>

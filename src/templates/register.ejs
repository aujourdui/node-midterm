<%- include("_header") -%>

<h1>Register</h1>
<form action="/api/register" method="post">
  <input
    type="email"
    class="form-control"
    placeholder="Type your Email"
    name="email"
  />
  <input
    type="password"
    class="form-control"
    placeholder="Type your Password"
    name="password"
  />
  <input type="submit" value="Register" class="btn btn-success" />
</form>
<h5 style="margin-top: 1rem">
  If you already have your account, please login
  <a href="/api/login">here</a>.
</h5>

<%- include("_footer") -%>
